{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2017",
    "jsx": "react",
    "lib": [
      "es7",
      "es5",
      "es2015",
      "dom",
      "es2017"
    ],
    "inlineSourceMap": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "ssr.config.js"
  ]
}